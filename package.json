  "bugs": {
    "url": "https://github.com/trevorjburni/vg-blog/issues"
  },
  
  "homepage": "https://github.com/trevorjburni/vg-blog#readme",
  "dependencies": {
    "create-react-app": "^3.4.1"
  }
}
